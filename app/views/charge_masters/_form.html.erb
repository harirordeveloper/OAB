<script>
function calls()
       {
          
          cal1 = $( '#price' ).val();
          cal2 = $( '#discount' ).val();
           cal3 = cal2/cal1*100
           cal4 = cal1-cal2
          $( '#discount_percent' ).val(cal3);
          $( '#fixed_price' ).val(cal4);
       }
</script>
