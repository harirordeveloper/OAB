<table id="example">
 <thead > 
  <tr>
   
    <th>Doctor Name</th>
    <th>Doctor Id</th>
    <th>Doctor Charge</th>
    <th>Clinic Charge</th>
    <th></th>
    
  </tr>
</thead>
<tbody> 
<% @doctor_assignments.each do |doctor_assignment| %>
 <tr>
    <td><%= doctor_assignment.doctor_name %></td>
    <td><%= doctor_assignment.doctor_id %></td>
    <td><%= doctor_assignment.doctor_charge %></td>
    <td><%= doctor_assignment.clinic_charge %></td>


    <td align="center"><%=  link_to image_tag("/assets/show.png",:border=>"0",:title=>" Click Here to VIEW This Record",:width=>20,:height=>20), doctor_assignment %>&nbsp&nbsp&nbsp
   <%= link_to image_tag("/assets/Edit.png",:border=>"0",:title=>" Click Here to Edit This Record",:width=>20,:height=>20), edit_doctor_assignment_path(doctor_assignment) %>&nbsp&nbsp&nbsp
    <%= link_to image_tag("/assets/delete.png",:border=>"0",:title=>" Click Here to Delete This Record",:width=>20,:height=>20), doctor_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>

