} );
</script>
<table>
	<tr>
		<td width="250px" style="font-family :arial;"><%= image_tag("add.png")%><font size="4" ><%= link_to 'Add Doctor Assignment', new_doctor_assignment_path %></font></td>
		<td width="750px"> </td><td><a href='<%= loginpage_path %>' target=_parent><%= image_tag("/assets/back.png",:border => 0)%></a></td>
